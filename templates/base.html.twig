<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="/bootstrap/bootstrap-select.min.css"> 
		<link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
		<link rel="stylesheet" href="/bootstrap/choices.min.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% include('nav.html.twig') %}
		{# message #}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% block body %}{% endblock %}
		<script src="/bootstrap/jquery.min.js"></script>
		<script src="/bootstrap/bootstrap.bundle.min.js"></script>
		<script src="/bootstrap/bootstrap-select.min.js"></script>
		<script src="/bootstrap/choices.min.js"></script>

<script>
const sorting = document.querySelector('.chosen');
const commentSorting = document.querySelector('.chosen');
const sortingchoices = new Choices(sorting, {
    placeholder: true,
    itemSelectText: ''
});


// Trick to apply your custom classes to generated dropdown menu
let sortingClass = sorting.getAttribute('class');
window.onload= function () {
    sorting.parentElement.setAttribute('class', sortingClass);
}
</script>
	</body>
</html>
