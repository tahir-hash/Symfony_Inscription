{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Nom complet</th>
					<th scope="col">Sexe</th>
					<th scope="col">Grade</th>
				</tr>
			</thead>
			{% for prof in profs %}
				<tr>
					<td>
						{{prof.nomComplet}}
					</td>
					<td>
						{{prof.sexe}}
					</td>
					<td>
						{{prof.grade}}
					</td>
				</tr>
			{% endfor %}
		</table>


	</div>
	<div class="d-flex justify-content-center">
		{% do profs.setPageRange(10) %}
		{{knp_pagination_render(profs,'pagination.html.twig')}}
	</div>
{% endblock %}
